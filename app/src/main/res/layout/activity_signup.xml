<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:background="#F8F8FF"
    tools:context=".SignupActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal">
    <ImageView
        android:id="@+id/anh"
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:src="@drawable/anhapp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Welcome to Kitchen Stories!"
            android:textColor="#00CC33"
            android:textSize="25dp"
            android:textStyle="bold" />

    </LinearLayout>

    <EditText
        android:id="@+id/username"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:hint="User Name"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:background="#F5F5F5"
        android:layout_marginTop="110dp"/>
    <EditText
        android:id="@+id/password"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:hint="Password"
        android:inputType="textPassword"
        android:layout_marginTop="30dp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:background="#F5F5F5"
        android:layout_below="@+id/username"/>
    <EditText
        android:id="@+id/repassword"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:hint="Retype Password"
        android:inputType="textPassword"
        android:layout_marginTop="30dp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:background="#F5F5F5"
        android:layout_below="@+id/password"/>
    <Button
        android:id="@+id/btndangki"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="SIGN UP"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:layout_marginTop="50dp"
        android:backgroundTint="#00CC33"
        android:background="@drawable/custombutton"
        android:layout_below="@id/repassword"/>
    <Button
        android:id="@+id/btndangnhap"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Existing user! Go to Sign in"
        android:textColor="@color/white"
        android:background="@drawable/custombutton"
        android:textStyle="bold"
        android:layout_marginTop="30dp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:backgroundTint="#00CC33"
        android:layout_below="@id/btndangki"/>

</RelativeLayout>