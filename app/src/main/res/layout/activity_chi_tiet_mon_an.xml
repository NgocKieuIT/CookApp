<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ChiTietMonAnActivity">

    <TextView
        android:id="@+id/cttenmonan"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:text="Bật Mí Cách Làm Ngan Xào Sả Ớt, Ngan Xào Lăn Ngon Mê Ly"
        android:gravity="center"
        android:textStyle="bold"
        android:textSize="23sp"
        android:textColor="#000000"
        android:background="#00CC33"/>
    <ImageView
        android:id="@+id/ctanh"
        android:layout_width="350dp"
        android:layout_gravity="center"
        android:layout_height="200dp"
        android:src="@drawable/nganxaoxaot"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp">
        <TextView
            android:layout_marginStart="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Người viết:  "
            android:textStyle="bold"
            android:textColor="#00CC33"
            android:textSize="17sp" />
        <TextView
            android:id="@+id/user"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_weight="1"
            android:text="Người viết"
            android:textStyle="bold"
            android:textColor="#00CC33"
            android:textSize="17sp" />
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Công Thức nấu ăn"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        android:textColor="@color/black"
        android:textSize="22sp" />
    <TextView
        android:id="@+id/ctcongthuc"
        android:layout_marginTop="15dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Bạn Đã Chọn"
        android:textColor="@color/black"
        android:textSize="15sp" />
</LinearLayout>